# Database Configuration
DATABASE_URL=postgresql://shopping_user:shopping_pass@localhost:5432/shopping_db

# LLM Provider Configuration
# Options: "openai" or "groq" (default: groq)
LLM_PROVIDER=groq

# OpenAI API Key (required if LLM_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key (required if LLM_PROVIDER=groq)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Environment
ENVIRONMENT=development

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

